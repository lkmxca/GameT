/* pages/fu/fu.wxss */
/* 顶部轮播 */
.ttop image{
  width: 100%;height: 100%;
}
/* 二次轮播 */
.ttwolun{
  /* border: 1rpx solid #f00; */
  height: 650rpx;
  padding: 10rpx 20rpx;
}
.nn::after,.mm::after,.bomt::after{
  content: "";
  display: block;
  clear: both;
}
/* 标头 */
.nn{
  /* border: 1rpx solid #f00; */
  padding: 10rpx 0;
}
.nn text:nth-child(1){
  float: left;
}
.nn text:nth-child(2){
  float: right;
  color: #0af;
  font-size: 20rpx;
  margin: 15rpx;
}
/* 标号图 */
.tone{
  width: 50rpx;height: 100rpx;
  float: left;
  margin: 15rpx 10px 0 10px;
}
/* 主图 */
.ttwo{
  width: 150rpx;height: 150rpx;
  float: left;
  margin-right: 20rpx;
}
/* 文字内容 */
.mm text{
  display: block;
  margin: 45rpx 0;
}
.mm text:nth-child(3){
  font-weight: bold;
}
.mm text:nth-child(4){
  color: rgb(197, 193, 193);
  font-size: 30rpx;
}
/* 更多内容 */
.bomt{
  /* border: 1rpx solid #f00; */
  padding: 10rpx 20rpx;
  margin: 15rpx 0;
}
.bomt>text{
  display: block;
  font-weight: bold;
  padding: 8px 0;
}
.bomt-in{
  /* border: 1rpx solid #0f0; */
  width: 22.5%;
  float: left;
  text-align: center;
  font-size: 30rpx;
  margin-left: 10rpx;
}
.bomt-in>image{
  width: 100%;height: 120rpx;
}